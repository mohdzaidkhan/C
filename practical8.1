#include <stdio.h>

int main() {

int N1,N2,add,sub,mul,div,option;
printf("enter first no.N1:");
scanf("%d",&N1);
printf("enter your second no.N2:");
scanf("%d",&N2);
printf("menu\n");
printf("1:addition\n");
printf("2:substraction\n");
printf("3:multiplication\n");
printf("4:divide\n");
printf("enter any one choice:(1-4)");
scanf("%d",&option);

switch(option)
{
    case 1:
    add=N1+N2;
    printf("addition of N1&N2=%d",add);
    break;
    case 2:
    sub=N1-N2;
    printf("substraction of N1&N2=%d",sub);
    break;
    case 3:
    mul=N1*N2;
    printf("multiplication of two numbers=%d",mul);
    break;
    case4:
    div=N1/N2;
    printf("division of two numbers=%d",div);
    break;
    
    default:
    printf("invalid choice.......");
    
}

}
